<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guncolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kittaporn.iboxbox.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/nameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_dog_round" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="184dp"
        android:layout_height="25dp"
        android:layout_marginTop="93dp"
        android:text="Loading.."
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.eazegraph.lib.charts.StackedBarChart xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/stackedbarchart"
        android:layout_width="332dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="14dp"
        android:padding="10dp"
        android:visibility="visible"
        app:egBarWidth="30dp"
        app:egFixedBarWidth="true"
        app:egLegendHeight="40dp"
        app:layout_constraintBottom_toTopOf="@+id/seemoreBtn"
        app:layout_constraintEnd_toStartOf="@+id/restText"
        app:layout_constraintStart_toStartOf="@+id/restText"
        app:layout_constraintTop_toBottomOf="@+id/playText" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:layout_marginStart="26dp"
        android:text="Activity Result"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/stackedbarchart"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/seemoreBtn"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:background="@android:color/transparent"
        android:text="See ..."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/restImage"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/restText"
        app:layout_constraintEnd_toStartOf="@+id/restText"
        app:layout_constraintStart_toEndOf="@+id/resultText"
        app:layout_constraintTop_toBottomOf="@+id/resultText"
        app:srcCompat="@android:color/holo_blue_dark" />

    <ImageView
        android:id="@+id/playImage"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/playText"
        app:layout_constraintEnd_toStartOf="@+id/playText"
        app:layout_constraintStart_toEndOf="@+id/restText"
        app:layout_constraintTop_toTopOf="@+id/restImage"
        app:srcCompat="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/restText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="56dp"
        android:text="Rest"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/stackedbarchart"
        app:layout_constraintEnd_toStartOf="@+id/playText"
        app:layout_constraintStart_toStartOf="@+id/imageView3" />

    <TextView
        android:id="@+id/playText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="66dp"
        android:layout_marginTop="203dp"
        android:text="Play"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
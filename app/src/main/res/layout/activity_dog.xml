<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.kittaporn.iboxbox.DogActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_marginBottom="105dp"
        app:layout_constraintBottom_toTopOf="@+id/dateTX"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/guncolor" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="89dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Dog Daily Activity"
        android:textColor="@color/transparent_black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dateTX"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dateBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_calendar"
        app:layout_constraintBottom_toTopOf="@+id/dateTX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/dateTX"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="381dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:text="DATE"
        android:textAlignment="center"
        android:textColor="@color/transparent_black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:layout_marginBottom="197dp"
        android:text="Please Choose Date"
        android:textColor="@color/transparent_black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTX"
        app:layout_constraintVertical_bias="1.0" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <org.eazegraph.lib.charts.StackedBarChart
            android:id="@+id/stackedbarchart"
            android:layout_width="150dp"
            android:layout_height="264dp"
            android:layout_marginBottom="96dp"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="42dp"
            android:padding="10dp"
            android:visibility="visible"
            app:egBarWidth="40dp"
            app:egFixedBarWidth="true"
            app:egLegendHeight="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/playTX"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginBottom="190dp"
            android:textColor="@color/transparent_black"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/restTX"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/transparent_black"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/playTX"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginBottom="33dp"
            android:text="PLAY"
            android:textColor="@color/transparent_black"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/playTX"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/restTX" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="82dp"
            android:layout_marginTop="255dp"
            android:text="REST"
            android:textColor="@color/transparent_black"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/restTX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/playTX"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="232dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/playTX"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:srcCompat="@color/guncolor" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="59dp"
            android:layout_marginTop="255dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toStartOf="@+id/playTX"
            app:layout_constraintStart_toEndOf="@+id/stackedbarchart"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/blue" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
